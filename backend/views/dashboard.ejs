<!DOCTYPE html>
<html>

<head>
    <title>Admin Productos</title>
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/dashboard.css">
</head>

<body>

    <div class="alumnos-container">
        <p>Freijomil Bruno</p>
        <p>Gonzalez Paula</p>
        <p>Sanchez Franco Nicolas</p>
    </div>

    <header>
        <img src="/assets/imgs/gameLogo.jpg" alt="shop logo">
        <h1>G4ME $T0RE</h1>
        <button type="button" id="btn-darkMode"> ☀️ </button>
    </header>

    <main>
        <h1 style="text-align: center;">Productos</h1>

        <div class="container-buttons">
            <p>Filtrar por:</p>
            <button type="button" id="todos-button" class="button btn-filtrar" data-plataforma="Todos">Todos</button>
            <button type="button" id="xbox-button" class="button btn-filtrar" data-plataforma="Xbox">Xbox</button>
            <button type="button" id="play-button" class="button btn-filtrar"
                data-plataforma="PlayStation">PlayStation</button>
        </div>

        <div class="contenedor-altaproducto">
            <button class="button alta-producto" id="altaproducto-button" type="button">Dar de alta NUEVO
                PRODUCTO</button>
        </div>




        <div id="productos-container">
            <% if (juegos && juegos.length> 0) { %>
                <% juegos.forEach(juego=> { %>
                    <div class="card">
                        <img src="<%= juego.imagen %>" alt="<%= juego.nombre %>">
                        <div class="card-content">
                            <h4>
                                <%= juego.nombre %>
                            </h4>
                            <p>Precio: $<%= juego.precio %></p>
                            <p>Disponibilidad: <%= juego.disponible %></p>
                            <p>Plataforma: <%= juego.plataforma %></p>
                            <div class="acciones-botones">
                                <button class="editar-button" data-id="<%= juego.id %>">Modificar</button>
                                <button class="eliminar-button" data-id="<%= juego.id %>">Eliminar</button>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p>No hay juegos para mostrar.</p>
                            <% } %>
        </div>




        <div class="contenedor-altaproducto">
            <h2 class="button alta-producto" id="volverlogin-button">Volver al login</h2>
        </div>
    </main>
</body>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const botones = document.querySelectorAll('.btn-filtrar');

        botones.forEach(btn => {
            btn.addEventListener('click', async () => {
                const plataforma = btn.dataset.plataforma;

                try {
                    const response = await fetch(`/juegos/filtrar?plataforma=${plataforma}`);
                    const juegos = await response.json();

                    const contenedor = document.getElementById('productos-container');
                    contenedor.innerHTML = '';

                    juegos.forEach(juego => {
                        const card = document.createElement('div');
                        card.classList.add('card');

                        card.innerHTML = `
                        <img src="${juego.imagen}" alt="${juego.nombre}">
                        <div class="card-content">
                            <h4>${juego.nombre}</h4>
                            <p>Precio: $${juego.precio}</p>
                            <p>Disponibilidad: ${juego.disponible}</p>
                            <p>Plataforma: ${juego.plataforma}</p>
                            <div class="acciones-botones">
                                <button class="editar-button" data-id="${juego.id}">Modificar</button>
                                <button class="eliminar-button" data-id="${juego.id}">Eliminar</button>
                            </div>
                        </div>
                    `;

                        contenedor.appendChild(card);
                    });

                    activarBotones();
                } catch (error) {
                    console.error('Error al filtrar:', error);
                }
            });
        });

        function activarBotones() {
            document.querySelectorAll('.eliminar-button').forEach(btn => {
                btn.addEventListener('click', async () => {
                    const id = btn.dataset.id;
                    if (!confirm('¿Estás seguro de que querés eliminar este juego?')) return;

                    const res = await fetch(`/juegos/delete/${id}`, { method: 'DELETE' });
                    const data = await res.json();

                    alert(data.message || data.error);
                    if (res.ok) location.reload();
                });
            });

            document.querySelectorAll('.editar-button').forEach(btn => {
                btn.addEventListener('click', () => {
                    const id = btn.dataset.id;
                    window.location.href = `/juegos/modificar-producto?id=${id}`;
                });
            });
        }

        activarBotones();
    });
</script>

</html>