<!DOCTYPE html>
<html>

<head>
    <title>Admin Productos</title>
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/dashboard.css">
</head>

<body>

    <div class="alumnos-container">
        <p>Freijomil Bruno</p>
        <p>Gonzalez Paula</p>
        <p>Sanchez Franco Nicolas</p>
    </div>

    <header>
        <img src="/assets/imgs/gameLogo.jpg" alt="shop logo">
        <h1>G4ME $T0RE</h1>
        <button type="button" id="btn-darkMode"> ☀️ </button>
    </header>

    <main>
        <h1 style="text-align: center;">Productos</h1>

        <div class="container-buttons">
            <p>Filtrar por:</p>
            <button type="button" id="todos-button" class="button btn-filtrar" data-plataforma="Todos">Todos</button>
            <button type="button" id="xbox-button" class="button btn-filtrar" data-plataforma="Xbox">Xbox</button>
            <button type="button" id="play-button" class="button btn-filtrar"
                data-plataforma="PlayStation">PlayStation</button>
        </div>

        <div class="contenedor-altaproducto">
            <button class="button alta-producto" id="altaproducto-button" type="button">AGREGAR PRODUCTO</button>
        </div>



        <!-- Los datos de la variable "juegos" se pasan en carpeta juegosRutas.js (router.get('/dashboard', renderJuegos);),la variable juegos debe de ser pasada al renderizar express-->
        <div id="productos-container">
            <% if (juegos && juegos.length> 0) { %>
                <% juegos.forEach(juego=> { %>
                    <div class="card">
                        <img src="<%= juego.imagen %>" alt="<%= juego.nombre %>">
                        <div class="card-content">
                            <h4>
                                <%= juego.nombre %>
                            </h4>
                            <p>Precio: $<%= juego.precio %>
                            </p>
                            <p>Disponibilidad: <%= juego.disponible %>
                            </p>
                            <p>Plataforma: <%= juego.plataforma %>
                            </p>
                            <div class="acciones-botones">
                                <button class="editar-button" data-id="<%= juego.id %>">Modificar</button>
                                <button class="desactivar-button" data-id="<%= juego.id %>" data-disponible="<%= juego.disponible %>">Desactivar</button>
                                <button class="reactivar-button" data-id="<%= juego.id %>">Reactivar</button>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p>No hay juegos para mostrar.</p>
                            <% } %>
        </div>




        <div class="contenedor-altaproducto">
            <h2 class="button alta-producto" id="volverlogin-button">Volver al login</h2>
        </div>
    </main>
</body>

<script>

    /* FUNCIÓN BOTÓN ALTA PRODUCTO */
    document.getElementById("altaproducto-button").addEventListener("click", () => {
        window.location.href = '/juegos/alta-producto';
    })

    /* FUNCIÓN BOTÓN VOLVER LOGIN */
    document.getElementById("volverlogin-button").addEventListener("click", () => {
        /*
        Logica para volver a login
        window.location.href = '/usuarios/login'; */
    })

    /* FUNCIÓN BOTÓNES DE FILTRADO */
    document.addEventListener('DOMContentLoaded', () => {
        const botones = document.querySelectorAll('.btn-filtrar');

        botones.forEach(btn => {
            btn.addEventListener('click', async () => {
                const plataforma = btn.dataset.plataforma;

                try {
                    const response = await fetch(`/juegos/filtrar?plataforma=${plataforma}`);
                    const juegos = await response.json();

                    const contenedor = document.getElementById('productos-container');
                    contenedor.innerHTML = '';

                    juegos.forEach(juego => {
                        const card = document.createElement('div');
                        card.classList.add('card');

                        card.innerHTML = `
                        <img src="${juego.imagen}" alt="${juego.nombre}">
                        <div class="card-content">
                            <h4>${juego.nombre}</h4>
                            <p>Precio: $${juego.precio}</p>
                            <p>Disponibilidad: ${juego.disponible}</p>
                            <p>Plataforma: ${juego.plataforma}</p>
                            <div class="acciones-botones">
                                <button class="editar-button" data-id="${juego.id}">Modificar</button>
                                <button class="desactivar-button" data-id="${juego.id}">Desactivar</button>
                                <button class="reactivar-button" data-id="${juego.id}">Reactivar</button>
                            </div>
                        </div>
                    `;

                        contenedor.appendChild(card);
                    });

                    activarBotones();
                } catch (error) {
                    console.error('Error al filtrar:', error);
                }
            });
        });

        function activarBotones() {



            // Botón Desactivar
            document.querySelectorAll('.desactivar-button').forEach(btn => {
                btn.addEventListener('click', async () => {
                    const id = btn.dataset.id;
                    const disponible = parseInt(btn.dataset.disponible);

                    if (disponible === 1) {
                        if (!confirm('¿Estás seguro de que querés desactivar este juego?')) return;

                        try {
                            const res = await fetch(`/juegos/desactivar/${id}`, { method: 'PUT' });
                            const data = await res.json();
                            alert(data.message || data.error);
                            if (res.ok) location.reload();
                        } catch (error) {
                            console.error('Error al desactivar el juego:', error);
                        }
                    } else {
                        alert('El juego ya está desactivado.');
                    }
                });
            });



            // Botón Modificar
            document.querySelectorAll('.editar-button').forEach(btn => {
                btn.addEventListener('click', () => {
                    const id = btn.dataset.id;
                    window.location.href = `/juegos/modificar-producto/${id}`;
                });
            });



            //Botón reactivar
            document.querySelectorAll('.reactivar-button').forEach(btn => {
                btn.addEventListener('click', async () => {
                    const id = btn.dataset.id;

                    try {
                        const res = await fetch(`/juegos/reactivar/${id}`, { method: 'PUT' });
                        const data = await res.json();
                        alert(data.message || data.error);
                        if (res.ok) location.reload();
                    } catch (error) {
                        console.error('Error al reactivar:', error);
                    }
                });
            });


        }

        activarBotones();
    });
</script>

</html>