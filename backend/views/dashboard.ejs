<!DOCTYPE html>
<html>

<head>
    <title>Admin Productos</title>
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/dashboard.css">
</head>

<body>

    <div class="alumnos-container">
        <p>Freijomil Bruno</p>
        <p>Gonzalez Paula</p>
        <p>Sanchez Franco Nicolas</p>
    </div>

    <header>
        <img src="/assets/imgs/gameLogo.jpg" alt="shop logo">
        <h1>G4ME $T0RE</h1>
        <button type="button" id="btn-darkMode"> ☀️ </button>
    </header>

    <main>
        <h1 style="text-align: center;">Productos</h1>

        <div class="container-buttons">
            <p>Filtrar por:</p>
            <button type="button" id="todos-button" class="button">Todos</button>
            <button type="button" id="xbox-button" class="button">Xbox</button>
            <button type="button" id="play-button" class="button">PlayStation</button>
        </div>

        <div class="contenedor-altaproducto">
            <button class="button alta-producto" id="altaproducto-button" type="button">Dar de alta NUEVO PRODUCTO</button>
        </div>

        <!-- ✅ Aquí renderizamos dinámicamente productos -->
        <div id="productos-container">
            <% if (juegos && juegos.length> 0) { %>
                <% juegos.forEach(juego=> { %>
                    <div class="juego">
                        <h3>
                            <%= juego.nombre %>
                        </h3>
                        <p>Precio: $<%= juego.precio %></p>
                        <p>Consola: <%= juego.plataforma %></p>
                        <p>Disponible: <%= juego.disponible %></p>
                        <!-- Agregá botones si querés eliminar o editar -->
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p>No hay juegos para mostrar.</p>
                            <% } %>
        </div>

        <div class="contenedor-altaproducto">
            <h2 class="button alta-producto" id="volverlogin-button">Volver al login</h2>
        </div>
    </main>
</body>

</html>